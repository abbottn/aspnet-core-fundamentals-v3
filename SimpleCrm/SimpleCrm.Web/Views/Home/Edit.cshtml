@using SimpleCrm
@model CustomerEditViewModel
@{
    @*
        Use the Model of the current customer that was brought in to build the title
    *@
    ViewBag.Title = $"Edit {Model.LastName}";
      
}
<div>
    <h1>Edit @Model.LastName</h1>
    <form method="post" asp-antiforgery="true">
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
         <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
         <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div>
            <label asp-for="OptInNewsletter"></label>
            <input asp-for="OptInNewsletter">
        </div>

        <div>
            <label asp-for="Type"></label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList(typeof(CustomerType))">
            </select>
        </div>
        <input type="submit" value="Update" />
    </form>

</div>
