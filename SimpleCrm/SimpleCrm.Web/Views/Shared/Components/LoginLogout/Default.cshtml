@model CrmUser
<div>
    @if(User.Identity.IsAuthenticated)
    {
        <div>Hello, @Model.DisplayName</div>
        <a class="mdl-navigation__link readability" asp-action="Logout" asp-controller="Account">Logout</a>
    }
    else
    {
        <a class="mdl-navigation__link" asp-action="Login" asp-controller="Account">Login</a>
    }
</div>